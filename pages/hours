    <table id="reg_hours_container" class="reg_hours_container">
        <script id="reg_hours_template" type="x-tmpl-mustache/text">
            <tr>
                <td class="hours_left">
                    {{day}}
                </td>   
                <td class="hours_right">
                    {{h}}
